<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.khalifa.locateme">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.khalifa.locateme.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.khalifa.locateme.activity.RegisterActivity"
                android:parentActivityName="com.khalifa.locateme.activity.SplashActivity"/>
        <activity android:name="com.khalifa.locateme.activity.HomeActivity">
        </activity>
        <activity
                android:name="com.khalifa.locateme.activity.LoginActivity"
                android:parentActivityName="com.khalifa.locateme.activity.SplashActivity"/>
        <activity android:name="com.khalifa.locateme.activity.ChatActivity">
        </activity>

        <service android:name=".cloud.firebase.LocationFirebaseService"
                 android:enabled="true"
                 android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service android:name=".cloud.firebase.LocationMessagingService"
        android:enabled="true"
        android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>