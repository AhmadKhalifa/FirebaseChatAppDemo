<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.khalifa.chatapp">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.khalifa.chatapp.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.khalifa.chatapp.activity.RegisterActivity"
                  android:parentActivityName="com.khalifa.chatapp.activity.SplashActivity"/>
        <activity android:name="com.khalifa.chatapp.activity.HomeActivity">
        </activity>
        <activity android:name="com.khalifa.chatapp.activity.LoginActivity"
                  android:parentActivityName="com.khalifa.chatapp.activity.SplashActivity"/>
    </application>

</manifest>